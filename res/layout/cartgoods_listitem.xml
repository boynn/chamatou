<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="7dip"
    android:paddingLeft="6dip"
    android:paddingRight="6dip"
    android:paddingTop="8dip" >

    <CheckBox
        android:id="@+id/cart_goods_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/pick_rdbtn_selector"/>

    <ImageView 
    	android:id="@+id/cart_goods_gimg"
      	style="@style/goods_image"/>

	<LinearLayout
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:layout_marginLeft="6dip"> 
	       	
       	<TextView 
       		android:id="@+id/cart_goods_gname"  
    		style="@style/detail_attr_subject"/>
   	 	<LinearLayout
    	 	   	android:layout_width="fill_parent"
    	    	android:layout_height="wrap_content"
    	    	android:orientation="horizontal" > 
		<TextView
    	   	style="@style/detail_attr_title"
    	   	android:text="商品条码：" />
		<TextView 
			android:id="@+id/cart_goods_gnum" 
			style="@style/detail_attr_value" />
		</LinearLayout>
		<LinearLayout
    	 	   	android:layout_width="fill_parent"
    	    	android:layout_height="wrap_content"
    	    	android:orientation="horizontal" > 
		<TextView
    	   	style="@style/detail_attr_title"
    	   	android:text="规格：" />
		<TextView 
			android:id="@+id/cart_goods_specc" 
			style="@style/detail_attr_value" />
		<TextView
    	   	style="@style/detail_attr_title"
    	   	android:text="供应商：" />
		<TextView 
			android:id="@+id/cart_goods_provider" 
			style="@style/detail_attr_value" />
		</LinearLayout>
			
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
   
	    	<TextView
    	   		style="@style/detail_attr_value"
    	   		android:layout_gravity="center_vertical"
		        android:layout_marginTop="10dip"
		        android:layout_marginRight="0dip"
		        android:text="数量：" />
		
		    <Button
		        android:id="@+id/button_goods_minus"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:layout_gravity="center_vertical"
		        android:layout_marginTop="10dip"
		        android:paddingTop="2dip"		        
			    android:text="-"
		        android:textSize="@dimen/text_size_15" />

		   	<EditText
		   	    android:id="@+id/cart_goods_qty"
		   	    android:layout_width="wrap_content"
		   	    android:layout_height="30dp"
		   	    android:layout_gravity="center_vertical"
		   	    android:layout_marginTop="10dip"
		   	    android:editable="true"
		   	    android:gravity="top|center_vertical"
		   	    android:numeric="integer"
		   	    android:singleLine="true" 
				android:textSize="@dimen/text_size_12" />

			<Button
			    android:id="@+id/button_goods_plus"
			    android:layout_width="30dp"
			    android:layout_height="30dp"
			    android:layout_gravity="center_vertical"
			    android:gravity="center_vertical"
		   	    android:layout_marginTop="10dip"		        
			    android:paddingTop="2dip"		        
			    android:text="+"
			    android:textSize="@dimen/text_size_15" />
   
					        
	       	<TextView 
	       	    android:id="@+id/cart_goods_price"  
	    		android:layout_gravity="center_vertical"
			    android:layout_marginTop="10dip"		        
			    android:paddingTop="2dip"		        
			    style="@style/detail_attr_money" />

        </LinearLayout>

	</LinearLayout>

</LinearLayout> 
